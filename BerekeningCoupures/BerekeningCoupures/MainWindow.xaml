<Window x:Class="BerekeningCoupures.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BerekeningCoupures"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="Bedrag" FontWeight="Bold" FontStyle="Italic" Margin="120,80,0,0"/>
            <TextBox x:Name="inputTextbox" Width="100" Height="35" Margin="0,0,450,0"/>
            <Label Content="Aantal" FontWeight="Bold" FontStyle="Italic" Margin="120,30,0,0"/>
            <TextBox x:Name="resultTextBox" Height="200" Width="500" HorizontalAlignment="Left" Margin="120,0,0,0"/>
        </StackPanel>
            <Button x:Name="calculateButton" Content="Berekenen" Width="80" Height="50" Margin="642,217,78,167" Click="calculateButton_Click"/>
            <Button x:Name="clearButton" Content="Wissen" Width="80" Height="50" Margin="642,266,78,118" Click="clearButton_Click" />
            <Button x:Name="closeButton" Content="Afsluiten" Width="80" Height="50" Margin="642,316,78,68" Click="Button_Click"/>

    </Grid>
</Window>
